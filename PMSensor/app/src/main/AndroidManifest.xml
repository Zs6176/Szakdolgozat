<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ITT A HIÁNYZÓ ENGEDÉLY -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- A többi engedély, amiket korábban már hozzáadtunk -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <!-- Az internet eléréshez szükséges engedély (valószínűleg ez már benne van) -->
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PMSensor"
        tools:targetApi="31">
        <!-- A fő Activity -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- A többi Activity, mint pl. a GraphActivity -->
        <activity android:name=".GraphActivity" />

    </application>

</manifest>
